{{#each results}}
  <li class="movie" data-id="{{this.id}}">
    <div class="poster_home"
         style="background-image: url('https://image.tmdb.org/t/p/w400/{{this.backdrop_path}}'),
                 url('https://image.tmdb.org/t/p/w400/{{this.poster_path}}'),
                 url('https://cdn1.vectorstock.com/i/1000x1000/44/05/oops-404-error-page-not-found-vector-18634405.jpg');
                 background-size: 100%;">
      <h3 class="movie-text">{{this.title}}({{this.release_date}})</h3>
    </div>
  </li>
{{/each}}
